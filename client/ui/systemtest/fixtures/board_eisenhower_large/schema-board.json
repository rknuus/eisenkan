{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "columns"],
  "properties": {
    "name": { "type": "string" },
    "columns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "sections": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}


